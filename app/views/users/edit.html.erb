
<div class='container'>
  <h2>User info</h2>

  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>

    <% end %>

    <%= form_for(@user) do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "name" %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= f.attachment_field :profile_image, class: "user_image" %>
    </div>

    <div class="field">
      <%= f.label :introduction %>
      <%= f.text_area :introduction, class: "introduction" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
  </div>