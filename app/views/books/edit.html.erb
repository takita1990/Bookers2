<div class='container'>
  <div class='row'>
    <div class='col-md-9 col-md-offset-3'>
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>

        <%= form_for(@book) do |f| %>

        <div class="field row">
          <table class='table'>
            <div class = "col-lg-8">
              <p><%= f.label :title %></p>
              <%= f.text_field :title, class: "form-control" %>
            </div>
          </table>
        </div>

        <div class="field row">
          <table class='table'>
            <div class = "col-lg-8">
              <p><%= f.label :Opinion %></p>
              <%= f.text_area :body, class: "form-control" %>
            </div>
          </table>
        </div>

        <div class="field row">
          <table class='table'>
            <div class = "col-lg-8">
             <%= f.submit "Update Book", class: "btn btn-block btn-primary ,form-control" %>
           </div>
         </table>
       </div>

       <div class="field row">
        <table class='table'>
          <p class= "edit"><%=link_to "Show",book_path(@book) %> | <%=link_to "Back",books_path %></p>
        </table>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>